# Credentials 
export AWS_ACCESS_KEY_ID="<YOUR ACCESS KEY>"
export AWS_SECRET_ACCESS_KEY="<YOUR SECRET KEY>"

# Workflow
terraform init
terraform validate
terraform plan
terraform apply -auto-approve
terraform destroy -auto-approve 
terraform plan -destroy
terraform apply -destroy

# State
terraform show  -> affiche l'état en détails
terraform list  -> list all of the items in Terraform's managed state

# Help
terraform -help
terraform -h plan

# Version
terraform -version